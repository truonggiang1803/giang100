                    </div>
                </div>
            </div>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>

                <div class="carousel-inner">

                    <div class="carousel-item active">
                        <img height="300px" width="100%" src="~/Content/HinhAnh/quangcao2.png">
                    </div>
                    <div class="carousel-item ">
                        <img height="300px" width="100%" src="~/Content/HinhAnh/quangcao1.jpeg">
                    </div>
                    <div class="carousel-item ">
                        <img height="300px" width="100%" src="~/Content/HinhAnh/quangcao3.jpeg">
                    </div>

                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <br />
            <div class="container">
                <div class="col-lg-2">
                    @Html.Action("LoaiHang", "Home")
                </div>
                <div class="col-lg-8">
                    <a href="#" class="col-lg-push-2" style="text-decoration: none; font-size:14px; color:black"><img src="https://img.icons8.com/plasticine/100/000000/shop.png" height="30px" width="30px" />LazMall</a>
                    <a href="#" class="col-lg-push-3" style="text-decoration: none; font-size:14px; color:black"><img src="https://img.icons8.com/plasticine/100/000000/globe.png" height="30px" width="30px" />LazGlobal</a>
                    <a href="#" class="col-lg-push-3" style="text-decoration: none; font-size:14px; color:black"><img src="https://img.icons8.com/plasticine/100/000000/redeem.png" height="30px" width="30px" />Vouchers</a>
                    <a href="#" class="col-lg-push-4" style="text-decoration: none; font-size:14px; color:black"><img src="https://img.icons8.com/plasticine/100/000000/touchscreen-smartphone.png" height="30px" width="30px" />Top up & eCoupon</a>
                </div>
            </div>
            <div class="container body-content">
                <div class="col-lg-2"></div>
                <div class="col-lg-10">@RenderBody()</div>
                
            </div>
            <div class="d_footer">

                <div class="row">
                    <div class="col-lg-3">

                    <div class="col-lg-3 ">
                        <a href="#"><img src="~/Content/HinhAnh/logo3.png" width="200" height="100" /></a>
                    </div>
                </div>

            </div>
        </div>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
